<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white_full"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@color/white_full"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_recommended_foods"
            android:layout_width="@dimen/restaurnt_width"
            android:layout_height="@dimen/restaurnt_width"
            android:scaleType="centerCrop"
            android:src="@drawable/drawable_background" />

        <com.padc.recipes.components.MMTextView
            android:id="@+id/tv_recommended_foods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_recommended_foods"
            android:gravity="center"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="Sample title"
            android:textColor="@android:color/black" />

   </LinearLayout>
</android.support.v7.widget.CardView>