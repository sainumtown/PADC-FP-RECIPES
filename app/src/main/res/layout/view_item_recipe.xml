<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardBackgroundColor="@color/white_full"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_recipe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_image_height"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_recipe_thumbnail" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_recipe"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:src="@drawable/ic_favorite_border_24dp" />

            <com.padc.recipes.components.MMTextView
                android:id="@+id/tv_recipe_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_recipe"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingTop="@dimen/margin_medium"
                android:paddingRight="@dimen/padding_medium"
                android:text="အာလူးေခ်ာင္းေျကာ္ (French Fries) (ေအးေနလဲ စားလိုု ့ေကာင္းတဲ့နည္း)"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_regular" />

            <com.padc.recipes.components.MMTextView
                android:id="@+id/tv_cook_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recipe_title"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:text="၂၀ မိနစ္"
                android:textColor="@color/text_black_ish"
                android:textSize="@dimen/text_small" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>