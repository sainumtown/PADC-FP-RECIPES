<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- Video Thumbnail -->
    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/imageView_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_image_height"
        android:layout_margin="5dp"
        android:background="@color/black_full"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/iv_video_icon"
        android:layout_width="@dimen/iv_video_icon_width"
        android:layout_height="@dimen/iv_video_icon_height"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="@id/imageView_thumbnail"
        android:layout_centerVertical="true"
        android:src="@drawable/play_video_1" />
    </RelativeLayout>

    <!-- Video Title -->
    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:text="အာလူးေခ်ာင္းေျကာ္ (French Fries) (ေအးေနလဲ စားလိုု ့ေကာင္းတဲ့နည္း)"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_regular" />

</LinearLayout>