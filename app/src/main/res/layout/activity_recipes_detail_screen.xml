<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.padc.recipes.activities.RecipesDetailScreenActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="@dimen/margin_medium_2"
            app:expandedTitleMarginStart="@dimen/margin_medium_2"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:title="ပုဇြန္ / ဂဏာန္း ဟင္း"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <ImageView
                android:id="@+id/iv_attraction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/drawable_background" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:textSize="@dimen/text_regular_3x"
                android:text="ပါ၀င္ေသာပစၥည္းမ်ား"/>

            <View android:id="@+id/separator"
                android:background="#949292"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                />

            <CheckBox
                android:id="@+id/chk1"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ပုဇြန္ - ၂၅ က်ပ္သား(ေခါင္းပါေသာပုဇြန္ ကိုသုံးလွ်င္ ပိုစားေကာင္းပါသည္။)(သို ့)ဂဏာန္း - ၂ေကာင္" />

            <CheckBox
                android:id="@+id/chk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="ဆား-လက္ဖက္ရည္ဇြန္း ေလးပုံ ၃ပုံ နွင့္ ျကက္သြန္ျဖဴ မွုန္ ့-လက္ဖက္ရည္ဇြန္း ေလးပုံတပုံ" />

            <CheckBox
                android:id="@+id/chk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="ငရုတ္ေဆာ့ - လက္ဖက္ရည္ဇြန္း ၁ ဇြန္"/>

            <CheckBox
                android:id="@+id/chk4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="အေရာင္တင္မွုန္ ့(paprika) - လက္ဖက္ရည္ဇြန္း ၁ ဇြန္း"/>

            <CheckBox
                android:id="@+id/chk5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="ျကက္သြန္ျဖဴ - ၃ တက္ (ေတာက္ေတာက္စင္းထားပါ။)"/>

            <CheckBox
                android:id="@+id/chk6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="သံပုရာသီး - ၁ ျခမ္း"/>

            <CheckBox
                android:id="@+id/chk7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="ေထာပတ္ - ထမင္းစားဇြန္း ၈ ဇြန္း"/>

            <View android:id="@+id/separator1"
                android:background="#949292"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_xlarge"
                    android:text="ေစ်း၀ယ္စာရင္းသို႕ ထည့္ရန္"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:text="စာရင္းမွပယ္ဖ်က္ရန္္"
                    android:layout_height="@dimen/height_xlarge"
                    android:layout_marginRight="@dimen/margin_medium_2"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:textSize="@dimen/text_regular_3x"
                android:text="ျပဳလုပ္နည္း"/>

            <View android:id="@+id/separator2"
                android:background="#949292"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                />

            <TextView
                android:id="@+id/tv_step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="အဆင့္(၁)"/>

            <TextView
                android:id="@+id/tv_stepdec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="ပုဇြန္/ ဂဏာန္း မ်ားျပဳတ္ရန္ အိုးျကီးျကီး တလုံးမွာ ေရေႏြးအိုးတည္ပါ။ ေရေႏြးအိုးထဲတြင္ သံပုရာသီး အ၀ိုင္းလုိက္ ၃ ခုေလာက္ကို ထည့္ရ်္ တည္ပါ။ "/>

            <TextView
                android:id="@+id/tv_step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="အဆင့္(၂)"/>

            <TextView
                android:id="@+id/tv_stepdec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="ေရေႏြး ပြက္လာလွ်င္ ပုဇြန္မ်ားကို ထည့္ရ်္ ၃ မိနစ္ခန္ ့ျပဳတ္ပါ။ (အခ်ိန္ပိုျပဳတ္လွ်င္ စားလို ့မေကာင္းပါ။)
ဂဏာန္းကို ေတာ့ ၁၀ မိနစ္ခန္ ့ျပဳတ္ပါ။ ျပီးလွ်င္ ဂဏာန္းမ်ားကို ခြာရ်္ သန္ ့၇ွင္းထားပါ။
"/>

            <TextView
                android:id="@+id/tv_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="အဆင့္(၃)"/>

            <TextView
                android:id="@+id/tv_stepdec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text=" ျပဳတ္ျပီး သား ပုဇြန္/ ဂဏာန္းမ်ားကိုအိုးထဲမွ ဆယ္ပါ။ (သံပုရာသီးအဖတ္မ်ားပါဆယ္ပါ။) (ျပဳတ္ထားေသာ အရည္မ်ားကို မသြန္ပစ္ပါနဲ့ )
"/>

            <TextView
                android:id="@+id/tv_step4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="အဆင့္(၄)"/>

            <TextView
                android:id="@+id/tv_stepdec4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="အနွစ္လုပ္မည့္ အိုးထဲတြင္ ေထာပတ္ကို ထည့္၊ ေထာပတ္အရည္ေပ်ာ္ရင္ ျကက္သြန္ျဖဴကိုဆီသတ္ပါ။ အနံ ေမြွးရုံ ဆီသတ္ပါ။ (ျကက္သြန္ျဖဴမ်ားတူးသြားရင္စားမေကာင္းပါ။) ျကက္သြန္ျဖဴအနံေမြွးလာလွ်င္ မီးဖိုမီးကို ပိတ္ျပီး င၇ုတ္ေဆာ့၊ အေ၇ာင္တင္မွုန္ ့၊ Louisiana seafood mix (သို ့) ဆားနွင့္ ျကက္သြန္ျဖဴအမွုန္ ့တို ့ကို ထည့္ရ်္ သမေအာင္ေမြွပါ။ ထို ့ေနာက္ ျပဳတ္ထားေသာ ပုဇြန္/ ဂဏာန္း ကိုထည့္ရ်္ မီးဖိုေပၚတြင္ျပန္တည္ပါ။ ျပဳတ္ထားေသာ အရည္ ၁ ခြက္ကို ယူရ်္ ထည့္ပါ။ ၂ မိနစ္ေလာက္ သမေအာင္ေမြွျပီးလွ်င္ မီးဖိုေပၚမွ ခ်ရ်္ သုံးေဆာင္နိုင္ပါသည္။
အနံအရမ္းေမြွးျပီး စပ္စပ္နဲ ့အရမ္းစားေကာင္းတဲ ့ပုဇန္/ ဂဏာန္းဟင္းပါ။
( ထမင္းစားဇြန္း = 1 tablespoon = 15 ml) ( လက္ဖက္ရည္ဇြန္း = 1 teaspoon = 5 ml)

"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_availableshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:textSize="@dimen/text_regular_3x"
                android:text="ရရွိႏိုင္ေသာဆိုင္မ်ား"/>

            <View android:id="@+id/separator3"
                android:background="#949292"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginLeft="@dimen/margin_medium_2">

            <ImageView
                    android:id="@+id/iv_ykko"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                android:layout_marginRight="@dimen/margin_medium"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ykko"/>

                <ImageView
                    android:id="@+id/iv_taipot"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/taipot"/>
                <ImageView
                    android:id="@+id/iv_yangon"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/yangon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_medium_2">

                <TextView
                    android:id="@+id/tv_ykko"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:text="YKKO" />
                <TextView
                    android:id="@+id/tv_taipot"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:text="Tai Pot" />
                <TextView
                    android:id="@+id/tv_yangongrill"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:text="Yangon Grill and Chill" />

            </LinearLayout>
    </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_favorite_black_24dp"
        android:tint="@android:color/white"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|end|right"
        />

</android.support.design.widget.CoordinatorLayout>
